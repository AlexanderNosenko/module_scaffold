<%= mc_wrap_with_namespaces(@helper.namespace_dirs) do
<<-EOS
class #{@helper.class_name} < BaseDescriptor

  def type
    '#{@helper.resource_name}'
  end

  def response_attributes
    {
      #{@helper.attributes.map do |attr|
        @helper.format_attr_str(attr)
      end.join(",\n")}
    }
  end

  def request_attributes
    {
      type: :object,
      properties: {
        #{@helper.resource_name}: {
          type: :object,
          properties: {
            #{@helper.attributes.map do |attr|
              @helper.format_attr_str(attr)
            end.join(",\n")}
          }
        }
      },
      required: ['#{@helper.resource_name}']
    }
  end

end
EOS
end %>
