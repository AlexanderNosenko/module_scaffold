require 'swagger_helper'

describe '<%= @helper.class_name %>', type: :request, rswag: true do
  let_it_be(:<%= @helper.resource_name %>) { create(:<%= @helper.resource_name %>) }
  let_it_be(:<%= @helper.route_id_param %>) { <%= @helper.resource_name %>.id }

  let(:params) do
    {
      <%= @helper.resource_name %>: {
        <%= @helper.tested_attributes %>
      }
    }
  end

  path '<%= @helper.index_route_str %>' do
    get 'List all available <%= @helper.resource_name_plural %> in a given context' do
      tags '<%= @helper.class_name %>'
      produces 'application/json'

      let_it_be(:external_<%= @helper.resource_name_plural %>) do
        create_list(:<%= @helper.resource_name %>, 1)
      end

      response '200', 'ok' do
        schema(rswag_scheme(
          <%= @helper.descriptor_class_name %>,
            collection: true,
            relationships: [],
            included: []
        ))

        run_test! do
          expect_json_sizes('data', 1)
          expect_json('data.0.id', <%= @helper.resource_name %>.id.to_s)
        end

      end

      context 'unauthorized user' do
        response '401', 'unauthorized' do
          schema(rswag_error_scheme)
          run_test!
        end
      end
    end

    post 'Create a <%= @helper.resource_name %>' do
      tags '<%= @helper.class_name %>'
      produces 'application/json'
      consumes 'application/json'
      parameter name: :params, in: :body, schema: <%= @helper.descriptor_class_name %>.new.request_attributes

      response '200', 'ok' do
        schema(rswag_scheme(
          <%= @helper.descriptor_class_name %>,
          relationships: [],
          included: []
        ))

        run_test! do
          expected_value = <%= @helper.sample_param_reference %>
          expect_json('data.attributes.<%= @helper.sample_attribute_name %>', expected_value)
        end
      end

      response '422', 'unprocessable_entity' do
        before { <%= @helper.sample_param_reference %> = '' }

        schema(rswag_error_scheme)
        run_test!
      end
    end
  end

  path '<%= @helper.index_route_str %>/{<%= @helper.route_id_param %>}' do
    get 'Get details of a given <%= @helper.resource_name %>' do
      tags '<%= @helper.class_name %>'
      produces 'application/json'
      parameter name: :<%= @helper.route_id_param %>, in: :path, type: :string

      response '200', 'ok' do
        schema(rswag_scheme(
          <%= @helper.descriptor_class_name %>,
          relationships: [],
          included: []
        ))

        run_test! do
          expect_json('data.id', <%= @helper.resource_name %>.id.to_s)
        end
      end
    end

    patch 'Update a given <%= @helper.resource_name %>' do
      tags '<%= @helper.class_name %>'
      produces 'application/json'
      consumes 'application/json'
      parameter name: :<%= @helper.route_id_param %>, in: :path, type: :string
      parameter name: :params, in: :body, schema: <%= @helper.descriptor_class_name %>.new.request_attributes

      response '200', 'ok' do
        schema(rswag_scheme(
          <%= @helper.descriptor_class_name %>,
          relationships: [],
          included: []
        ))

        run_test! do
          expected_value = <%= @helper.sample_param_reference %>
          expect_json('data.attributes.<%= @helper.sample_attribute_name %>', expected_value)
        end
      end

      response '422', 'unprocessable_entity' do
        before { <%= @helper.sample_param_reference %> = '' }

        schema(rswag_error_scheme)

        run_test! do
          expect_json('errors.0.source.pointer', '/data/attributes/<%= @helper.sample_attribute_name %>')
          expect_json('errors.0.code', 'is_blank')
        end
      end
    end

    delete 'Destroy <%= @helper.resource_name %>' do
      tags '<%= @helper.class_name %>'
      produces 'application/json'
      consumes 'application/json'
      parameter name: :<%= @helper.route_id_param %>, in: :path, type: :string

      response '200', 'ok' do
        schema({})

        it 'destroys the <%= @helper.resource_name %>' do |example|
          expect do
            submit_request(example.metadata)
          end.to change { ::<%= @helper.module_full_name %>.count }.by(-1)
          assert_response_matches_metadata(example.metadata)
        end
      end
    end
  end
end
