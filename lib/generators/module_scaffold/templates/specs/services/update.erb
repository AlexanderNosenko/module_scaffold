require 'rails_helper'

describe <%= @helper.full_class_name('update') %> do
  subject { described_class.new(<%= @helper.resource_name %>, ActionController::Parameters.new(params)).call }
  let_it_be(:<%= @helper.resource_name %>) { create(:<%= @helper.resource_name %>) }
  let(:params) do
    {
      <%= @helper.resource_name %>: {
        <%= @helper.tested_attributes_formatted_str %>
      }
    }
  end

  describe '#call' do
    context 'with valid params' do
      it 'doesnt create new <%= @helper.resource_name %>' do
        expect { subject }.to change { <%= @helper.module_full_name %>.count }.by(0)
      end

      it 'updates <%= @helper.resource_name %> with correct attributes' do
        service = subject

        expect(service.success?).to eq true
        result = service.result
        expect(result).to be_a <%= @helper.module_full_name %>

        params[:<%= @helper.resource_name %>].each do |key, value|
          expect(result[key]).to eq value
        end
      end
    end

    context 'with invalid params' do
      let(:params) do
        {
          <%= @helper.resource_name %>: {
            <%= @helper.permitted_attributes.map do |attr|
              "#{attr}: nil"
            end.join(",\n") %>
          }
        }
      end

      it 'returns invalid record as error attribute' do
        service = subject

        expect(service.success?).to eq false
        expect(service.result).to eq nil
        expect(service.error).to be_a <%= @helper.module_full_name %>
        expect(service.error.valid?).to eq false
      end
    end
  end
end
